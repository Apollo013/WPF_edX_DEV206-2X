        <Storyboard x:ConnectionId='4' x:Name="RectangleStoryboard">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ChangeRectangleFill"
                                             Storyboard.TargetProperty="Fill"
                                             Duration="0:0:10" RepeatBehavior="Forever">
                <ObjectAnimationUsingKeyFrames.KeyFrames>
                    <DiscreteObjectKeyFrame KeyTime="0:0:1">
                        <DiscreteObjectKeyFrame.Value>
                            <LinearGradientBrush>
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="Yellow" Offset="0.0" />
                                    <GradientStop Color="Orange" Offset="0.5" />
                                    <GradientStop Color="Red" Offset="1.0" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                    <DiscreteObjectKeyFrame KeyTime="0:0:2">
                        <DiscreteObjectKeyFrame.Value>
                            <LinearGradientBrush>
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="SeaShell" Offset="0.0" />
                                    <GradientStop Color="MediumBlue" Offset="0.5" />
                                    <GradientStop Color="Black" Offset="1.0" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                    <DiscreteObjectKeyFrame KeyTime="0:0:3">
                        <DiscreteObjectKeyFrame.Value>
                            <LinearGradientBrush>
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="Purple" Offset="0.0" />
                                    <GradientStop Color="Gray" Offset="0.5" />
                                    <GradientStop Color="HotPink" Offset="1.0" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames.KeyFrames>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Rectangle Grid.Row="0" Grid.Column="0" Width="100" Height="50" Fill="Green">
            <Rectangle.RenderTransform>
                <RotateTransform CenterX="50" CenterY="25" Angle="45"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle Grid.Row="0" Grid.Column="1" Width="100" Height="50" Fill="Green">
            <Rectangle.RenderTransform>
                <SkewTransform AngleX="-15" AngleY="15"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle Grid.Row="1" Grid.Column="1" Width="100" Height="50" Fill="Green">
            <Rectangle.RenderTransform>
                <ScaleTransform ScaleX="0.5" ScaleY="2.0"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle Grid.Row="1" Grid.Column="0" Width="100" Height="50" Fill="Green">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="2" CenterY="40"/>
                    <TranslateTransform X="-30"/>
                    <RotateTransform Angle="45"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle x:ConnectionId='5' x:Name="RedRectangle" Height="50" Width="50" Fill="Red" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle.RenderTransform>
                <TranslateTransform X="0" Y="0" />
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle x:ConnectionId='6' x:Name="ChangeRectangleFill" Fill="Blue" Width="300" Height="300" Grid.Column="1" Grid.Row="2" />
        
        <Rectangle x:ConnectionId='7' x:Name="BlueRectangle" Height="100" Width="100" Fill="Blue" Grid.Row="3">
            <Rectangle.RenderTransform>
                <TranslateTransform X="0" Y="0" />
            </Rectangle.RenderTransform>
        </Rectangle>

        <Border x:ConnectionId='8' x:Name="StatusBorder" Grid.Row="4">
            <Border.Background>
                <SolidColorBrush Color="Red" />
            </Border.Background>
            <TextBlock Text="Status Message" FontFamily="Segoe UI Light" FontWeight="Light"
                   Foreground="WhiteSmoke" Margin="10,5" FontSize="32" />
        </Border>

        <Button x:ConnectionId='9' x:Name="SlidingButton" Content="Click Me"  Grid.Row="4" Grid.Column="1">
            <Button.RenderTransform>
                <TranslateTransform />
            </Button.RenderTransform>
        </Button>

        <ProgressRing IsActive="{Binding IsLoading}" Grid.Row="5" Grid.Column="0"/>
        
        <ListView ItemsSource="{Binding PhoneticNames}" Grid.Row="5" Grid.Column="0"/>
        
    </Grid>
</Page>

